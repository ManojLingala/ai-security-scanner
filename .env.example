# AI Security Scanner Environment Configuration
# Copy this file to .env and update the values

# Claude API Key (Required)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# JWT Secret Key (Required for production)
# Generate a secure 256-bit key for production use
JWT_SECRET=YourProductionSecretKeyMustBeAtLeast256BitsLong!

# Database Configuration
RAVENDB_URL=http://ravendb:8080
RAVENDB_DATABASE=AISecurityScanner-Prod

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
API_PORT=5105
RAVENDB_PORT=8080

# Optional: Custom Configuration
JWT_ISSUER=AISecurityScanner-Prod
JWT_AUDIENCE=AISecurityScanner-Prod
JWT_EXPIRATION_MINUTES=1440

# Compliance Frameworks (comma-separated)
ENABLED_FRAMEWORKS=PCI_DSS,HIPAA,SOX,GDPR

# Monitoring
REAL_TIME_MONITORING=true
LOG_LEVEL=Information